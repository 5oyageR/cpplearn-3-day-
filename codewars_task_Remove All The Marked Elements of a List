// Examples: * [1, 1, 2, 3, 1, 2, 3, 4], [1, 3] -> [2, 2, 4]
* [1, 1, 2, 3, 1, 2, 3, 4, 4, 3, 5, 6, 7, 2, 8], [1, 3, 4, 2] -> [5, 6, 7, 8]
* [8, 2, 7, 2, 3, 4, 6, 5, 4, 4, 1, 2, 3], [2, 4, 3] -> [8, 7, 6, 5, 1]


#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

vector<int> remove_values(vector<int> integers, vector<int> values)
{
    for (long long int i = 0; i < integers.size(); ++i)
    {
        if (find(values.begin(), values.end(), integers[i]) != values.end())
        {
            integers.erase(integers.begin() + i);
            --i;
        }
    }
    return integers;

}
