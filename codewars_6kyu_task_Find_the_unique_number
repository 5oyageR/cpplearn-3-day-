// Task â€“ find_uniq(std::vector<float>{1, 1, 1, 2, 1, 1});  // --> 2
// find_uniq(std::vector<float>{0, 0, 0.55, 0, 0});  // --> 0.55

#include <iostream>
#include <map>
#include <vector>
#include <algorithm>
#include <string>

using namespace std;

float find_uniq(const std::vector<float> &v)
{
    map<float, size_t> counter;
    for (auto it = v.begin(); it != v.end(); ++it)
    {
        ++counter[*it];
    }
    for (auto it = counter.begin(); it != counter.end(); ++it)
    {
        if (it->second == 1)
            return it->first;
    }
}

