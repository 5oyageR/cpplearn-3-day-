// " s p a c e s " => [ " S p a c e s ", " s P a c e s ", " s p A c e s ", " s p a C e s ", " s p a c E s ", " s p a c e S "]
#include <iostream>
#include <vector>
#include <algorithm>
#include <string>
#include <cstring>

using namespace std;

vector<string> wave(const string& y)
{
    vector<string> result;
    for (int i = 0; i < y.length(); ++i)
    {
        if (y[i] == ' ')
            continue;
        string tmp(y);
        tmp.replace(i, 1, string(1, toupper(tmp[i])));
        result.push_back(tmp);
    }
    return result;
}
