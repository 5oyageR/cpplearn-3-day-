// Task - solve the Sudoku
// Examples: validSolution([
  [5, 3, 4, 6, 7, 8, 9, 1, 2],
  [6, 7, 2, 1, 9, 5, 3, 4, 8],
  [1, 9, 8, 3, 4, 2, 5, 6, 7],
  [8, 5, 9, 7, 6, 1, 4, 2, 3],
  [4, 2, 6, 8, 5, 3, 7, 9, 1],
  [7, 1, 3, 9, 2, 4, 8, 5, 6],
  [9, 6, 1, 5, 3, 7, 2, 8, 4],
  [2, 8, 7, 4, 1, 9, 6, 3, 5],
  [3, 4, 5, 2, 8, 6, 1, 7, 9]
]); // => true
// validSolution([
  [5, 3, 4, 6, 7, 8, 9, 1, 2], 
  [6, 7, 2, 1, 9, 0, 3, 4, 8],
  [1, 0, 0, 3, 4, 2, 5, 6, 0],
  [8, 5, 9, 7, 6, 1, 0, 2, 0],
  [4, 2, 6, 8, 5, 3, 7, 9, 1],
  [7, 1, 3, 9, 2, 4, 8, 5, 6],
  [9, 0, 1, 5, 3, 7, 2, 1, 4],
  [2, 8, 7, 4, 1, 9, 6, 3, 5],
  [3, 0, 0, 4, 8, 1, 1, 7, 9]
]); // => false
#include <iostream>
#include <vector>
#include <algorithm>
#include <string>

using namespace std;

bool valid_sudoku(unsigned int matrix[9][9], int elem, int row, int col)
{
    for (int i = 0; i < 9; ++i)
    {
        if (matrix[row][i] == elem && i != col)
            return false;
    }
    for (int j = 0; j < 9; ++j)
    {
        if (matrix[j][col] == elem && j != row)
            return false;
    }
    for (int i = (row / 3) * 3, k = 0; k < 3 ; ++i, ++k)
    {
        for (int j = (col / 3) * 3, l = 0; l < 3; ++j, ++l)
        {
            if (matrix[i][j] == elem && j != col && i != row)
                return false;
        }
    }
    return true;
}

bool validSolution (unsigned int matrix[9][9])
{
    for (int i = 0; i < 9; ++i)
    {
        for (int j = 0; j < 9; ++j)
        {
            if (!valid_sudoku(matrix, matrix[i][j], i, j))
                return false;
        }
    }
    return true;
}
